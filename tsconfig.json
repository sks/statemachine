{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "strict": true,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,
        "jsx": "preserve",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}